{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],

  "collectCoverageFrom": ["src/**/*.{ts,tsx}", "!src/__tests__/*.data.ts"],

  "collectCoverage": true
}
